= simple_form_for @user, html: { class: "form form-horizontal user" } do |f|
  .form-group
    = f.label :mail_address, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :mail_address, class: 'form-control', required: true
    = f.error_span(:mail_address)
  .form-group
    = f.label :name, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :name, class: 'form-control', required: true
    = f.error_span(:name)
  .form-group
    = f.label :password, class: 'control-label col-lg-2'
    .col-lg-10
      = f.password_field :password, class: 'form-control', required: true
    = f.error_span(:password)
  .form-group
    = f.association :categories, as: :select, multiple: true, include_blank: true, input_html:{class: 'searchable'}, required: true
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), users_path, :class => 'btn btn-default'
